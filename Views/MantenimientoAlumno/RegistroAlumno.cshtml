@{
    ViewData["Title"] = "RegistroAlumno";
}

<h2>INFORMACION GENERAL</h2>

<div class="row mt-5">
    <div class="container">
        <form>
            <div class="form-group">
                <label for="exampleInputPassword1">DNI</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese DNI">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Nombre</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese Nombre">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Apellido</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese Apellido">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Fecha Nacimiento</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese Fecha de Nacimiento">
            </div>
        </form>
    </div>
</div>


<h2>NOTAS</h2>
<div class="row mt-5">
    <div class="container">
        <form>
            <div class="form-group">
                <label for="exampleInputPassword1">Curso</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese Curso">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Nota</label>
                <input type="password" class="form-control col-6" id="exampleInputPassword1" placeholder="Ingrese Nota">
                <button type="submit" class="btn btn-primary">Añadir</button>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 offset-sm-2">
                    <button type="submit" class="btn btn-secondary">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>
